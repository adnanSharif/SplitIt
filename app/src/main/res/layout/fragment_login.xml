<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_scene">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E-mail:"
            android:layout_marginEnd="5dp"/>
        <EditText
            android:layout_marginStart="30dp"
            android:id="@+id/fragment_login_username"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_alignBaseline="@+id/text_email"
            android:layout_toRightOf="@+id/text_email"/>
        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/text_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password:"
            android:layout_below="@id/text_email"
            android:layout_alignStart="@+id/text_email"
            android:layout_marginEnd="5dp"/>
        <EditText
            android:id="@+id/fragment_login_password"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_toEndOf="@+id/text_password"
            android:layout_alignStart="@+id/fragment_login_username"
            android:layout_alignBaseline="@+id/text_password"/>
        <Button
            android:layout_marginHorizontal="40dp"
            android:id="@+id/fragment_login_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="Login"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/text_password"
            android:background="@drawable/button_background_rounded"
            style="@style/ButtonText"/>
        <TextView
            android:id="@+id/fragment_login_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#F02"
            android:layout_below="@+id/fragment_login_button"
            android:visibility="invisible"/>
    </RelativeLayout>

</RelativeLayout>