<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_scene">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <TextView
            android:id="@+id/signup_username_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username:"
            android:layout_marginEnd="5dp"/>
        <EditText
            android:id="@+id/signup_username_edit_text"
            android:layout_marginStart="30dp"
            android:layout_width="100dp"
            android:layout_toEndOf="@id/signup_username_text_view"
            android:layout_alignBaseline="@+id/signup_username_text_view"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/signup_email_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:layout_marginEnd="5dp"
            android:layout_below="@+id/signup_username_text_view"
            android:layout_alignStart="@+id/signup_username_text_view"/>
        <EditText
            android:id="@+id/signup_email_edit_text"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/signup_username_edit_text"
            android:layout_alignBaseline="@+id/signup_email_text_view" />

        <TextView
            android:layout_marginTop="40dp"
            android:id="@+id/signup_password_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/signup_email_text_view"
            android:layout_below="@id/signup_email_text_view"
            android:text="Password:"
            android:layout_marginEnd="5dp"/>
        <EditText
            android:id="@+id/signup_password_edit_text"
            android:layout_marginStart="5dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/signup_email_edit_text"
            android:layout_alignBaseline="@+id/signup_password_text_view"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/signup_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Sign Up"
            android:layout_below="@+id/signup_password_text_view"
            android:background="@drawable/button_background_rounded"
            style="@style/ButtonText"/>
    </RelativeLayout>

</RelativeLayout>